# ===========================
# Next.js Configuration
# ===========================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================
# Supabase Configuration
# ===========================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================
# AI/LLM Configuration
# ===========================
# OpenAI API (GPT-4 Turbo for trend analysis & content generation)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# Anthropic Claude API (Alternative LLM)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===========================
# Upstash Redis (Caching & Rate Limiting)
# ===========================
# Get from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# ===========================
# External API Keys
# ===========================
# TikTok API (for trend data fetching)
# Get from: https://developers.tiktok.com/
TIKTOK_API_KEY=your_tiktok_api_key
TIKTOK_API_SECRET=your_tiktok_api_secret

# Instagram Graph API (for Reels data)
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# YouTube Data API v3 (for Shorts data)
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key

# ===========================
# Authentication
# ===========================
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl

# JWT Secret (for custom auth implementation)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_generate_with_openssl

# ===========================
# API Configuration
# ===========================
# API base URL (for internal API routes)
NEXT_PUBLIC_API_URL=/api

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================
# Monitoring & Analytics (Optional)
# ===========================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry (Error tracking)
# Get from: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ===========================
# Feature Flags (Optional)
# ===========================
NEXT_PUBLIC_ENABLE_CREATOR_MATCHING=true
NEXT_PUBLIC_ENABLE_CONTENT_GENERATION=true
NEXT_PUBLIC_ENABLE_TREND_ANALYSIS=true
